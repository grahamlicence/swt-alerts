{
  "name": "South West Trains journey alerts",
  "version": "0.8.1",
  "manifest_version": 2,
  "description": "Service updates for travel on South West Trains",
  "icons": {
    "16": "images/default_16.png",
    "48": "images/default_48.png",
    "128": "images/default_128.png" 
  },
  "browser_action": {
    "default_icon": "images/default_128.png",
    "default_popup": "index.html",    
    "default_title": "SWT alerts"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  }, 
  "permissions": [
    "http://rss.journeycheck.com/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}